#!/bin/bash

set -e

source ${HTTPD_CONTAINER_SCRIPTS_PATH}/common.sh

echo "---> Creating a custom image from Apache plugin weblogic and static files"


echo ${ENV_GIT_REPO_STATICS_FILE}

git clone ${ENV_GIT_REPO_STATICS_FILE} "/usr/repo_statics_files"
ls -l "/var/www/html/"
cp -a /usr/repo_statics_files/.  /var/www/html/
 

# Fix source directory permissions
fix-permissions ./
fix-permissions /tmp/wl-plugin/lib/
